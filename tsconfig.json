{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "lib": ["DOM"],
    "incremental": true,
    "sourceMap": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "react-jsxdev",
    "allowJs": false,
    "checkJs": false,
    "module": "ESNext",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",
    "moduleResolution": "node",
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "exclude": [
    "postcss.config.cjs",
    "tailwind.config.cjs",
    "vite.config.ts",
    "vitest.config.ts",
    "dist",
    "playwright.config.ts",
    "e2e",
    "node_modules"
  ]
}
